import random

#cream el random
x = random.randint(1, 100)
print("el nombre és ", x)


endevinat = True
#comptador torns
torn = 1
llista = []  


while (endevinat):
    torn +=1
    y=int(input("demana numero"))
    
    if (x>y):
        print ("es petit però valent")
    elif (x<y):
        print ("es gros")
    else:
        endevinat = False
     llista.append(y)
    

print("Molt bé has endevinat!!")
print("Has emprat", torn, "torns")
print(llista)
